{
  "version": "1.0.1",
  "manifest_version": 3,
  "name": "Twitter Verse",
  "description": "Twitter Extension",
  "background": {
    "service_worker": "/static/js/background.bundle.js"
  },
  "action": {
    "default_popup": "/static/js/popup.html"
  },
  "icons": {
    "128": "logo.png",
    "16": "logo.png",
    "48": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["/static/css/content.styles.css"],
      "js": ["/static/js/contentScript.bundle.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/static/css/content.styles.css",
        "/static/img/*",
        "logo.png",
        "/modules/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts;"
  }
}